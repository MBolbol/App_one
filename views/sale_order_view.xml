<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref = 'sale.view_order_form'/>
        <field name="arch" type="xml">
            
            <field name="partner_id" position='after'>
            
                <field name="property_id"/>
                <field name="car_id"/>

                <field name="car_chassis_number"/>
                <field name="car_color"/>
                <field name="car_country"/>

            </field>


            <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='name']" position="after"> 
                            <!-- <field name="product_template_id"/> -->
                            <!-- <field name="name"/> -->
                            <field name="car_id" />
                            <field name="car_chassis_number" />
                            <field name="car_color" />
                            <field name="car_country" />
            </xpath>


