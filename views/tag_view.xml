<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="tag_view_tree" model="ir.ui.view">
        <field name="name">tag_tree</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <record id="tag_view_form" model="ir.ui.view">
        <field name="name">tag_form</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class = 'title'>
                        <label for= 'name'/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">Tag_action</field>
        <field name="res_model">tag</field>
    </record>
    <menuitem
        id="tag_menu_item"
        name="Tags"
        parent= "configration_menu"
        action= "tag_action"
    />

</odoo>
