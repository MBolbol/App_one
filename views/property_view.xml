<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property_tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class='header_custom'>
                <field name="name"/>
                <field name="postcode"/>
                <field name="owner_id"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="Diff"/>
                <field name="garden"/>
                <field name="state"/>
                <field name="bedrooms" optional='1'/>
                <field name="garage" optional='1'/>
            </tree>
        </field>
    </record>
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <!--   statusbar_visible = 'pending, sold'  options="{'clickable': 1}"    -->
                        <button name="action_draft" type="object" class="btn-primary" string="set to Draft"
                            invisible="state == 'draft'"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="set to Pending"
                            invisible="state != 'draft'"/>
                        <button name="action_sold" type="object" class="btn-success" string="set to Sold"
                            invisible="state != 'pending'"/>
                        <field name="state" widget="statusbar"/>

                    </header>
                    <div class = 'title'>
                        <label for= 'name'/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Info.">
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="Diff"/>
                            <field name="living_area"/>


                        </group>
                        <group string="Additional Info.">
                            <field name="owner_id"/>
                            <field name="owner_phone"/>
                            <field name="owner_address"/>
                            <field name="facades"/>
                            <field name="bedrooms"/>
                            <field name="garage"/>
                            <field name="garden"/>
                            <field name="tag_ids" widget = 'many2many_tags'/>
                            <field name="garden_orientation"/>
                        </group>
                        <group>
                           <field name="description" required = '1'/>
                        </group>
                    </group>
                </sheet>
                <div class='oe_chatter'>
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
                <field name="postcode"/>
                <field name="name"/>

                <filter name="is_garden" string="with_garden" domain="[('garden', '=', True)]" />
                <filter name="is_not_garden" string="without_garden" domain="[('garden', '=', False)]" />
                <filter name="is_garage" string="with_garage" domain="[('garage', '=', True)]" />

                <filter name="group_garden" string="Garden" context="{'group_by': 'garden'}" />

            </search>
        </field>
    </record>
    
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">property_action</field>
        <field name="res_model">property</field>
    </record>
    <menuitem
        id="property_menu_item"
        name="Properties"
        parent= "properties_menu"
        action= "property_action" />

</odoo>
