<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cars_view_tree" model="ir.ui.view">
        <field name="name">cars_tree</field>
        <field name="model">cars</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="chassis_number"/>
                <field name="code"/>
                <field name="color"/>
                <field name="model_year"/>
                <field name="country"/>
                <field name="description"/>
                <field name="active"/>

            </tree>
        </field>
    </record>

    <record id="cars_view_form" model="ir.ui.view">
        <field name="name">cars_form</field>
        <field name="model">cars</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group string='General info.'>
                        <field name="name"/>
                        <field name="chassis_number"/>
                        <field name="country"/>
                        <field name="model_year"/>
                    </group>
                    <group string='additional info.'>
                        <field name="code"/>
                        <field name="active"/>
                        <field name="color"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class='oe_chatter'>
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="cars_view_search" model="ir.ui.view">
        <field name="name">cars search</field>
        <field name="model">cars</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="chassis_number"/>
                <field name="code"/>
                <field name="color"/>
                <field name="country"/>
                <field name="model_year"/>

            </search>
        </field>
    </record>


    <record id="cars_action" model="ir.actions.act_window">
        <field name="name">cars_action</field>
        <field name="res_model">cars</field>
    </record>
    <menuitem
        id="cars_menu_item"
        name="cars"
        parent= "properties_menu"
        action= "cars_action"
    />

</odoo>
